erDiagram
    projetos {
        INT id PK
        VARCHAR(255) nome
        DOUBLE verba_total
        DATE data_inicio
        DATE data_fim
    }
    
    etapas {
        INT id PK
        INT projeto_id FK
        VARCHAR(255) nome
        DOUBLE verba_alocada
        DATE data_inicio
        DATE data_fim
    }

    ordens_pagamento {
        INT id PK
        INT projeto_id FK
        INT etapa_id FK
        VARCHAR(255) descricao
        DOUBLE valor
    }

    compromissos_pagamento {
        INT id PK
        INT ordem_pagamento_id FK
        DATE data_compromisso
        DOUBLE valor_comprometido
        BOOLEAN pago
    }

    projetos ||--o{ etapas : "1:N"
    projetos ||--o{ ordens_pagamento : "1:N"
    etapas ||--o{ ordens_pagamento : "1:N"
    ordens_pagamento ||--o{ compromissos_pagamento : "1:N"
